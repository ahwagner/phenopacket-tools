{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://www.ga4gh.org/phenopackets/phenopacket",
  "title": "Phenopacket",
  "description": "Schema for Global Alliance for Genomics and Health (GA4GH) Phenopacket",
  "type": "object",
  "required": ["id", "metaData"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "description": "The unique identifier for the Phenopacket",
      "type": "string"
    },
    "subject": {
      "$ref": "#/definitions/individual"
    },
    "phenotypicFeatures": {
      "type": "array",
      "items": { "$ref": "#/definitions/phenotypicFeature" },
      "minItems": 1
    },
    "measurements": {
      "type": "array",
      "items": { "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/measurement.json#/definitions/measurement" },
      "minItems": 0
    },
    "biosamples": {
      "type": "array",
      "items": { "$ref": "#/definitions/biosample" },
      "minItems": 0
    },
    "interpretations": {
      "type": "array",
      "items": { "$ref": "#/definitions/interpretation" },
      "minItems": 0
    },
    "diseases": {
      "type": "array",
      "items": { "$ref": "#/definitions/disease" },
      "minItems": 0
    },
    "medicalActions": {
      "type": "array",
      "items": { "$ref": "#/definitions/medicalAction" },
      "minItems": 1
    },
    "files": {
      "type": "array",
      "items": { "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/file" },
      "minItems": 0
    },
    "metaData": {
      "$ref": "#/definitions/metaData" }
    },
    "definitions": {
    "update": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "updatedBy": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        }
      },
      "required": [
        "timestamp"
      ],
      "additionalProperties": false
    },
    "phenotypicFeature": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "excluded": {
          "type": "boolean"
        },
        "severity": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
          }
        },
        "onset": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "resolution": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "evidence": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/evidence"
          },
          "minItems": 0
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "variantInterpretation": {
      "type": "object",
      "properties": {
        "acmgPathogenicityClassification": {
          "enum": [
            "NOT_PROVIDED",
            "BENIGN",
            "LIKELY_BENIGN",
            "UNCERTAIN_SIGNIFICANCE",
            "LIKELY_PATHOGENIC",
            "PATHOGENIC"
          ]
        },
        "therapeuticActionability": {
          "enum": [
            "UNKNOWN_ACTIONABILITY",
            "NOT_ACTIONABLE",
            "ACTIONABLE"
          ]
        },
        "variationdescriptor": {
          "$ref" : "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/vrsatile.json#/definitions/variationDescriptor"

        }
      }
    },
    "geneDescriptor": {
      "type": "object",
      "properties": {
        "valueId": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "alternateIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "xrefs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "alternateSymbols": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "genomicInterpretation": {
      "type": "object",
      "properties": {
        "subjectOrBiosampleId": {
          "type": "string"
        },
        "interpretationStatus": {
          "enum": [
            "UNKNOWN_STATUS",
            "REJECTED",
            "CANDIDATE",
            "CONTRIBUTORY",
            "CAUSATIVE"
          ]
        },
        "variationInterpretation": {
          "oneOf": [
            {
              "$ref": "#/definitions/geneDescriptor"
            },
            {
              "$ref": "#/definitions/variantInterpretation"
            }
          ]
        }
      }
    },
    "individual": {
      "type": "object",
      "properties": {
        "id": {
          "description": "An arbitrary identifier for the subject of the Phenopacket",
          "type": "string"
        },
        "alternateIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0,
          "uniqueItems": true
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date-time"
        },
        "timeAtLastEncounter": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "vitalStatus": {
          "type": "object",
          "properties": {
            "status": {
              "enum": ["UNKNOWN_STATUS", "ALIVE", "DECEASED"]
            },
            "timeOfDeath": {
              "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
            },
            "causeOfDeath": {
              "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
            },
            "survivalTimeInDays": {
              "type": "number"
            }
          }
        },
        "sex": {
          "$ref": "#/definitions/sex"
        },
        "karyotypicSex": {
          "enum": ["UNKNOWN_KARYOTYPE", "XX", "XY", "XO", "XXY","XXX","XXYY", "XXXY", "XXXX", "XYY", "OTHER_KARYOTYPE"]
        },
        "taxonomy": {"$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"}
        },
      "required": ["id"]
    },
    "sex": {
      "enum": ["UNKNOWN_SEX", "FEMALE", "MALE", "OTHER_SEX"]
    },
    "diagnosis": {
      "type": "object",
      "properties": {
        "disease": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "genomicInterpretations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/genomicInterpretation"
          }
        }
      },
      "required": [
        "disease"
      ]
    },
    "disease": {
      "type": "object",
      "properties": {
        "term": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "excluded": {
          "type": "boolean"
        },
        "onset": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "resolution": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "diseaseStage": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
          },
          "minItems": 0,
          "uniqueItems": true
        },
        "clinicalTnmFinding": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
          },
          "minItems": 0,
          "uniqueItems": true
        },
        "primarySite": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "laterality": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        }
      }
    },
    "interpretation": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "progressStatus": {
          "enum": [
            "UNKNOWN_PROGRESS",
            "IN_PROGRESS",
            "COMPLETED",
            "SOLVED",
            "UNSOLVED"
          ]
        },
        "diagnosis": {
          "$ref": "#/definitions/diagnosis"
        },
        "summary" : {
          "type": "string"
        }
      },
      "required": [
        "id",
        "progressStatus"
      ]
    },
    "metaData": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string"
        },
        "createdBy": {
          "type": "string"
        },
        "submittedBy": {
          "type": "string"
        },
        "resources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/resource"
          },
          "minItems": 1
        },
        "updates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/update"
          },
          "minItems": 1
        },
        "phenopacketSchemaVersion": { "enum": ["2.0"]},
        "externalReferences": {
          "type": "array",
          "items": { "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/externalReference" },
          "minItems": 0
        }
      },
      "required": ["created", "createdBy","phenopacketSchemaVersion"],
      "additionalProperties": false
    },
    "biosample": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "individualId": {
          "type": "string"
        },
        "derivedFromId": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "sampledTissue": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "sampledType": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "phenotypicFeatures": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phenotypicFeature"
          }
        },
        "measurements": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/measurement.json#/definitions/measurement"
          }
        },
        "taxonomy": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "timeOfCollection": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "histologicalDiagnosis": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "tumorProgression": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "tumorGrade": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "pathologicalStage": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "pathologicalTnmFinding": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
          }
        },
        "diagnosticMarkers": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
          }
        },
        "procedure": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/procedure"
        },
        "files": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/file"
          }
        },
        "materialSample": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "sampleProcessing": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "sampleStorage": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "resource": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "namespacePrefix": {
          "type": "string"
        },
        "iriPrefix": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "url",
        "version",
        "namespacePrefix",
        "iriPrefix"
      ],
      "additionalProperties": false
    },
    "doseInterval": {
      "type": "object",
      "properties": {
        "quantity": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/measurement.json#/definitions/quantity"
        },
        "scheduleFrequency": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "interval": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeInterval"
        }
      },
      "required": [
        "quantity",
        "scheduleFrequency",
        "interval"
      ],
      "additionalProperties": false
    },
    "treatment": {
      "type": "object",
      "properties": {
        "agent": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "routeOfAdministration": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "doseIntervals": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/doseInterval"
          }
        },
        "drugType": {
          "enum": [
            "UNKNOWN_DRUG_TYPE",
            "PRESCRIPTION",
            "EHR_MEDICATION_LIST",
            "ADMINISTRATION_RELATED_TO_PROCEDURE"
          ]
        },
        "cumulativeDose": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/measurement.json#/definitions/quantity"
        }
      },
      "required": [
        "agent"
      ],
      "additionalProperties": false
    },
    "radiationTherapy": {
      "type": "object",
      "properties": {
        "modality": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "bodySite": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "dosage": {
          "type": "integer"
        },
        "fractions": {
          "type": "integer"
        }
      },
      "required": [
        "modality",
        "bodySite",
        "dosage",
        "fractions"
      ],
      "additionalProperties": false
    },
    "therapeuticRegimen": {
      "type": "object",
      "properties": {
        "ontologyClass": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "externalReference" : {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/externalReference"
        },
        "startTime": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "endTime": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/timeElement"
        },
        "regimenStatus": {
          "enum": [
            "UNKNOWN_STATUS",
            "STARTED",
            "COMPLETED",
            "DISCONTINUED"
          ]
        }
      },
      "oneOf": [
        { "required": [ "ontologyClass" ]},
        { "required": [ "externalReference" ]}
      ],
      "required": ["regimenStatus"],
      "additionalProperties": false
    },
    "medicalAction": {
      "type": "object",
      "properties": {
        "treatment": {
          "$ref": "#/definitions/treatment"
        },
        "procedure": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/procedure"
        },
        "radiationTherapy": {
          "$ref": "#/definitions/radiationTherapy"
        },
        "therapeuticRegimen": {
          "$ref": "#/definitions/therapeuticRegimen"
        },
        "treatmentTarget": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "treatmentIntent": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "responseToTreatment": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        },
        "adverseEvents": {
          "type": "array",
          "items": {
            "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
          }
        },
        "treatmentTerminationReason": {
          "$ref": "classpath:/org/phenopackets/phenopackettools/validator/jsonschema/v2/base.json#/definitions/ontologyClass"
        }
      },
      "additionalProperties": false,
      "oneOf": [ { "required": [ "procedure" ]},
        { "required": [ "radiationTherapy" ]},
        { "required": [ "therapeuticRegimen"]},
        { "required": [ "treatment" ]}
      ]
    }
  }
}